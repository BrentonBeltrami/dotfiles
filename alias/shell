# colorize list
alias ls='ls --color=auto'
alias c='clear'
alias :wq='clear'
alias :q='clear'
alias :q!='clear'

alias reload='source ~/.zshenv'
alias theme='kitty +kitten themes'

alias note='nvim +WikiJournal'
alias notes='nvim +WikiJournal'

alias linear='open -a linear'

function take {
    mkdir -p $1
    cd $1
}
