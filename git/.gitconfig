# This is Git's per-user configuration file.
[user]
	name = Brenton Beltrami
	email = contact@brentonbeltrami.com
[alias]
	co = checkout
	br = branch
	s = !clear && git status
	new = !clear && git co -b
	ss = status --short
	sync = !git fetch upstream && git merge upstream/master && git push
	update = "!if [ $(git rev-parse --is-bare-repository) = true ]; then git fetch origin main:refs/heads/main; elif [ -f .git ] && grep -q gitdir: .git; then git fetch origin main; fi"
	caa = commit -a --amend -C HEAD
[http]
	postBuffer = 524288000
[core]
	excludesfile = /Users/brentonbeltrami/.gitignore_global
